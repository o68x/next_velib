<div class="searchbar">
  <%= form_tag(root_path, method: "get", class: "searchbox") do %>
  <%= label_tag(:q, "") %>
  <%= text_field_tag :q, nil, placeholder: "rechercher" %>
  <%= button_tag type: 'submit' do %>
  <img src="https://img.icons8.com/dusk/64/000000/search.png">
  <% end %>
  <% end %>
</div>
<div class="main">
  <div class="searchresult">
    <code>
      <% unless @location.nil? %>
      <%= @location[:label] %>
      <%= @location[:coordinates] %>
      <% end %>
    </code>
  </div>

  <div class="stations">
    <%= render partial: 'stations', collection: @stations, as: 'station' %>
  </div>
</div>
<div class="footer">
  This would be a footer.
</div>
