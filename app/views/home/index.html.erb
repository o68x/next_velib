<div class="searchbar">
  <%= form_tag(root_path, method: "get", class: "searchbox") do %>
  <%= label_tag(:q, "") %>
  <%= text_field_tag :q, nil, placeholder: "Rechercher une station vélib" %>
  <%= button_tag type: 'submit' do %>
  <img src="https://img.icons8.com/dusk/64/000000/search.png">
  <% end %>
  <% end %>
</div>
<div class="main">
  <div class="searchresult">
    <code>
      <% unless @location.nil? %>
      <%= @location[:label] %>
      <%= @location[:coordinates] %>
      <% provide(:page_title, @location[:label]) %>
      <% end %>
    </code>
  </div>
  <div class="message<%= @location.nil? ? " show" : " hide" %>">
    Don't know what to do with <span style="text-decoration: underline"><%= @search.present? ? @search : 'nothing' %></span>
  </div>
  <div class="stations">
    <%= render partial: 'stations', collection: @stations, as: 'station', locals: {location: @location[:coordinates]} unless @location.nil? %>
  </div>
</div>
<div class="note">
  <code style="font-size: 1.1rem">&#42; à vol d'oiseau ;D</code>
</div>
<div class="footer">
  <code>Made with Rails 6 for THP Next, june 2019</code>
  <code><a href="https://github.com/ocardinaux/next_velib">ocardinaux</a></code>
</div>
